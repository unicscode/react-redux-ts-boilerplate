{
  "compilerOptions": {
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "ES5",
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/"],
      "@assets/*": ["src/assets/"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
